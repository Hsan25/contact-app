<%- include('layouts/header') %>

<div class="container my-5">
  <div class="row text-center">
    <h1>FORM UBAH CONTACT</h1>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <% if (typeof errors != 'undefined') { %>
      <ul class="alert alert-danger" role="alert">
        <% errors.forEach(e => { %>
        <li><%=e.msg %></li>
        <% }) %>
      </ul>
      <% } %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <form method="post" action="/contact/update">
        <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>" />
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="exampleInputEmail1"
            name="nama"
            value="<%= contact.nama %>"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail2" class="form-label">noHP</label>
          <input
            type="text"
            class="form-control"
            id="exampleInputEmail2"
            name="nohp"
            value="<%= contact.nohp %>"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail3" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail3"
            name="email"
            value="<%= contact.email %>"
          />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>

<%- include('layouts/footer') %>
